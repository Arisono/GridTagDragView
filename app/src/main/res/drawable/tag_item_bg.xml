<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_selected="true">
        <shape>
            <!-- 填充 -->
            <solid android:color="@color/green" />
            <!--定义填充的颜色值-->
            <!--  描边-->
            <stroke android:width="1sp" android:color="@color/gray_item_press" />
            <!--定义描边的宽度和描边的颜色值-->
            <!-- 圆角 -->
            <corners android:bottomLeftRadius="6dp" android:bottomRightRadius="6dp" android:topLeftRadius="6dp" android:topRightRadius="6dp" />
            <!-- 设置四个角的半径 -->
            <!-- 间隔 -->
            <!--  <padding
                  android:bottom="10dp"
                  android:left="10dp"
                  android:right="10dp"
                  android:top="10dp" />--> <!-- 设置各个方向的间隔 -->
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <!-- 填充 -->
            <solid android:color="#A52A2A" />
            <!--定义填充的颜色值-->
            <!--  描边-->
            <stroke android:width="1sp" android:color="@color/gray_item_press" />
            <!--定义描边的宽度和描边的颜色值-->
            <!-- 圆角 -->
            <corners android:bottomLeftRadius="6dp" android:bottomRightRadius="6dp" android:topLeftRadius="6dp" android:topRightRadius="6dp" />
            <!-- 设置四个角的半径 -->
            <!-- 间隔 -->
            <!--  <padding
                  android:bottom="10dp"
                  android:left="10dp"
                  android:right="10dp"
                  android:top="10dp" />--> <!-- 设置各个方向的间隔 -->
        </shape>
    </item>
    <item>
        <shape>
            <!-- 填充 -->
            <solid android:color="@color/gray_item" />
            <!--定义填充的颜色值-->
            <!--  描边-->
            <stroke android:width="1sp" android:color="@color/gray_item_press" />
            <!--定义描边的宽度和描边的颜色值-->
            <!-- 圆角 -->
            <corners android:bottomLeftRadius="6dp" android:bottomRightRadius="6dp" android:topLeftRadius="6dp" android:topRightRadius="6dp" />
            <!-- 设置四个角的半径 -->
            <!-- 间隔 -->
            <!--  <padding
                  android:bottom="10dp"
                  android:left="10dp"
                  android:right="10dp"
                  android:top="10dp" />--> <!-- 设置各个方向的间隔 -->
        </shape>
    </item>
</selector>
